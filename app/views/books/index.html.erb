<h1>Books</h1>

<table>
 <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
 </thead>

<% @books.each do |book| %>
  <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", book_path(book) %>
        <%= link_to "Edit", edit_book_path(book) %>
        <%= link_to "Destroy", book_path(book), method: :delete %>
      </td>
  </tr>
<% end %>
</table>
</tbody>

<h2><strong>New book</strong></h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors detected.</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="heading">Title</div>
  <div class="indextitle"><%= f.text_field :title %></div>

  <div class="heading">Body</div>
  <div class="indextitle"><%= f.text_area :body %></div>
  <%= f.submit 'Create Book' %>

</body>
<% end %>
